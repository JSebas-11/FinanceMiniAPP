<MudPaper Class="pa-4" Elevation="5">
    <MudGrid>
        @foreach (KeyValuePair<string, object?> metric in MetricsDict){
            <MudItem xs="12" sm="6">
                <MudText Typo="Typo.body2" Color="Color.Primary">@metric.Key</MudText>
                <MudText Typo="Typo.h6" Class="font-sbtitle">@GetStringOrHyphen(metric.Value)</MudText>
            </MudItem>
        }
    </MudGrid>
</MudPaper>

@code {
    //--------------------------INITIALIZATIION--------------------------
    [Parameter]
    public Dictionary<string, object?> MetricsDict { get; set; } = default!;

    //--------------------------METHODS--------------------------
    private string GetStringOrHyphen(object? value) => value?.ToString() ?? "-";
}